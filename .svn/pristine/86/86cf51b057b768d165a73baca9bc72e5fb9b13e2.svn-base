<br>
<div class="btn-group btn-group-justified" role="group" aria-label="...">
	<a href="#/myAct" class="btn btn-primary"><h4><span class="glyphicon glyphicon-fire" aria-hidden="true"></span> 我的活动</h4></a>
	<a href="#/search" class="btn btn-default"><h4><span class="glyphicon glyphicon-search" aria-hidden="true"></span> 查找活动</h4></a>
	<a href="#/edit" class="btn btn-default"><h4><span class="glyphicon glyphicon-bullhorn" aria-hidden="true"></span> 发起活动</h4></a>
</div>
<hr/>
<div class="text-left row container">
	<div class="col-xs-12  col-md-4 "  data-ng-repeat="act in activities | orderBy:'date'">
    <div class="thumbnail"  style="min-height:550px;">
      <img src="./img/{{act.img}}" alt="" style="height:250px;">
      <div class="caption">
        <h3>{{act.type}}活动</h3>
        <p>{{act.date}} {{act.startTime}}~{{act.endTime}} <a href="#"><span class="glyphicon glyphicon-calendar"></span></a> </p>
        <p>{{act.address}} <a role="button" ng-click="openMap()"><span class="glyphicon glyphicon-map-marker"></span></a></p>
        <p>{{act.content}}</p>
        <p><a href="#" class="btn btn-primary" role="button">分享</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="mapModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">地图</h4>
      </div>
      <div class="modal-body" id="mapContainer" style="height:500px;">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary">保存</button>
      </div>
    </div>
  </div>
</div>


